{% extends "base.html.twig" %}
{% block title %}Contact
{% endblock %}

{% block body %}
	<div class="jumbotron">
		<h1>Contact</h1>
	</div>
	<div id="contactForm" class='ml-4'>
		{{form_start(form)}}
		<div class="row">
			<div class="col">
				<div>{{form_row(form.firstname)}}</div>
				<div>{{form_row(form.lastname)}}</div>
				<div>{{form_row(form.phone)}}</div>
				<div>{{form_row(form.email)}}</div>
				<div>{{form_rest(form)}}</div>
				<div class="form-group">
					<button class="btn btn-primary">Envoyer</button>
				</div>
			</div>

		</div>


		{{form_end(form)}}

	</div>
{% endblock %}
