{% extends "base.html.twig" %}
{% block title %}Design Inrerieur
{% endblock %}

{% block body %}
	<div class="jumbotron">
		<h1>Design Interieur</h1>
	</div>

	<div class="container">
		<div class="row flex">
			{%for amenagement in amenagements%}
				<div class="col-3">
					<div class="card">
						<div class="card-body">
							<div class="card-title">
								<a href="{{path('design.show',{id :amenagement.id, slug: amenagement.slug})}}">{{amenagement.title}}
								</a>
								<p class="card-text">{{amenagement.description}}</p>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>


	</div>
{% endblock %}
