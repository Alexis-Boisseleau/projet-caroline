{% extends "base.html.twig" %}
{% block title %}Design Inrerieur
{% endblock %}

{% block body %}
	<div class="jumbotron">
		<h1>Design Interieur</h1>
	</div>

	<div class="container">
		<div class="row flex">
			{%for amenagement in amenagements%}
				<div class="col-3">

					{% if amenagement.filename %}
						<div class="images">

							<img src="{{ asset(vich_uploader_asset(amenagement, 'imageFile')| imagine_filter('thumb')) }} " class="images__img" alt="  ">
							<div class="images__overlay">
								<a href="{{path('design.show',{id :amenagement.id, slug: amenagement.slug})}}" class=" images__link">{{amenagement.title}}
								</div>
							</a>
						{% endif %}
					</div>


				</div>
			{% endfor %}
		</div>


	</div>
{% endblock %}
